local Window = Rayfield:CreateWindow({
   Name = "üî• Nguy√™n Hub | LITE V8",
   LoadingTitle = "ƒêang t·∫£i b·∫£n r√∫t g·ªçn...",
   LoadingSubtitle = "Ch√†o ƒê·∫°i Ca Anhtamdatrolaic!",
   ConfigurationSaving = {Enabled = true, FolderName = "NguyenHubLite", FileName = "Config"},
   KeySystem = false, 
})

--- BI·∫æN L∆ØU TR·ªÆ ---
local WS, JP = 16, 50
local LoopWS, LoopJP, NC = false, false, false
local ESP_P, ESP_M = false, false

--- TAB 1: TRANG CH·ª¶ ---
local T1 = Window:CreateTab("üè† Trang Ch·ªß", 4483362458)
T1:CreateSection("H·ªá Th·ªëng Treo M√°y")
T1:CreateButton({
   Name = "üöÄ K√çCH HO·∫†T ANTI-AFK",
   Callback = function()
      game.Players.LocalPlayer.Idled:Connect(function()
         game:GetService("VirtualUser"):Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
         task.wait(1)
         game:GetService("VirtualUser"):Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
      end)
      Rayfield:Notify({Title = "Nguy√™n Hub", Content = "ƒê√£ b·∫≠t Anti-AFK!", Duration = 5})
   end,
})

T1:CreateSection("Ch·ªâ S·ªë Nh√¢n V·∫≠t")
T1:CreateInput({Name = "T·ªëc ƒê·ªô", PlaceholderText = "16...", Callback = function(t) WS = tonumber(t) or 16 end})
T1:CreateToggle({Name = "L·∫∑p T·ªëc ƒê·ªô", CurrentValue = false, Callback = function(v) LoopWS = v end})
T1:CreateInput({Name = "S·ª©c Nh·∫£y", PlaceholderText = "50...", Callback = function(t) JP = tonumber(t) or 50 end})
T1:CreateToggle({Name = "L·∫∑p S·ª©c Nh·∫£y", CurrentValue = false, Callback = function(v) LoopJP = v end})
T1:CreateToggle({Name = "üî• Xuy√™n T∆∞·ªùng (Noclip)", CurrentValue = false, Callback = function(v) NC = v end})

--- TAB 2: ESP ---
local T2 = Window:CreateTab("üëÅÔ∏è ESP", 4483362458)
T2:CreateToggle({Name = "ESP Ng∆∞·ªùi Ch∆°i", CurrentValue = false, Callback = function(v) ESP_P = v end})
T2:CreateToggle({Name = "ESP NPC & Qu√°i", CurrentValue = false, Callback = function(v) ESP_M = v end})

--- TAB 3: BLOX FRUIT VIP ---

--- H·ªÜ TH·ªêNG TH·ª∞C THI ---
game:GetService("RunService").Stepped:Connect(function()
    pcall(function()
        local char = game.Players.LocalPlayer.Character
        if char and char:FindFirstChild("Humanoid") then
            if LoopWS then char.Humanoid.WalkSpeed = WS end
            if LoopJP then char.Humanoid.JumpPower = JP end
            if NC then
                for _, v in pairs(char:GetDescendants()) do
                    if v:IsA("BasePart") then v.CanCollide = false end
                end
            end
        end
    end)
end)

task.spawn(function()
    while task.wait(1) do
        if ESP_P then
            for _, p in pairs(game.Players:GetPlayers()) do
                if p ~= game.Players.LocalPlayer and p.Character and not p.Character:FindFirstChild("Highlight") then
                    Instance.new("Highlight", p.Character).FillColor = Color3.fromRGB(255, 0, 0)
                end
            end
        end
        if ESP_M then
            for _, v in pairs(workspace:GetDescendants()) do
                if v:IsA("Humanoid") and not game.Players:GetPlayerFromCharacter(v.Parent) and v.Parent and not v.Parent:FindFirstChild("Highlight") then
                    Instance.new("Highlight", v.Parent).FillColor = Color3.fromRGB(255, 255, 0)
                end
            end
        end
    end
end)

Rayfield:Notify({Title = "NGUY√äN HUB LITE", Content = "ƒê√£ b·ªè Anti-Cheat theo √Ω ƒê·∫°i ca!", Duration = 5})
